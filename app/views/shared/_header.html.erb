<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='max-width p-3 d-flex flex-column bg-light'>
  
  <div class='d-flex justify-content-between align-items-center'>
    <%= link_to image_tag("LifeFunction-logo.png",size: '200x60'), "/", class:"p-2" %>
    
    <form class="d-flex " action="#">
      <input class='ps-3 form-control form-control-lg col-sm-2' placeholder='キーワードから探す'>
      <button class="w-2 border-0 rounded bg-info">
        <%= image_tag "search.png",size: '40x40', class:"img-responsive" %>
      </button>
    </form>

    <ul class='d-flex align-end fs-5'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.last_name + " " + current_user.first_name, "#", class: "text-decoration-none text-dark ms-1" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "text-decoration-none text-dark ms-3" %></li>
      <% else %>
        <li><%= link_to 'ログイン', user_session_path, class: "text-decoration-none text-dark" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "text-decoration-none text-dark" %></li>
      <% end %>
    </ul>
  </div>
</header>

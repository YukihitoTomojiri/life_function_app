<%= render "shared/header" %>

<div class='text-center bg-light'>

  <div class="bg-info d-flex flex-col justify-content-between p-3">
    <h2 class="text-light ms-5">利用者一覧</h2>
    <div class="btn btn-success rounded navbar-btn me-5">
      <%= link_to "患者登録", new_patient_path, class: "text-light text-decoration-none" %>
    </div>
  </div>

  <div class="container">
    <div class="row  p-3">
      <div class="d-flex position-relative">
        <div class="col">
          <%= image_tag("account_icon.svg", size: '100x60') %>
        </div>
        <div class="col">
          <h5 class="mt-3">
            患者名
          </h5>
        </div>
        <div class="col">
          <h5 class="mt-3">
            介護認定
          </h5>
        </div>
      </div>
    </div>
    <div class="overflow-auto" style="height: 50vh; width: 100%;">
      <% @patients.each do |patient| %>
        <table class="table table-hover">
          <div class="row m-auto rounded-pill border border-4" style="width: 95%;">
            <div class="d-flex position-relative">
              <div class="col">
                <%= image_tag("account_icon.svg", size: '100x60') %>
              </div>
              <div class="col">
                <h5 class="text-decoration-none text-center mt-2">
                  <%= link_to patient.patient_last_name + " " + patient.patient_first_name, patient_path(patient.id), class:"text-decoration-none stretched-link text-reset" %>
                </h5>
              </div>
              <div class="col">
                <h5 class="mt-2">
                  <%= patient.care_certified.name %>
                </h5>
              </div>
            </div>
          </div>
        </table>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer"%>

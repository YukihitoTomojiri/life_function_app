<%= render "shared/header" %>

<div class='text-center bg-light'>

  <div class="title-contents">
    <h2>利用者一覧</h2>
    <div class="btn btn-danger navbar-btn">
      <%= link_to "患者登録", new_patient_path, class: "patient-new" %>
    </div>
  </div>

  <div class="contents-row">
    <ul class="patient-name">
      <% @patients.each do |patient| %>
        <div class="patient_post">
          <%= link_to patient.patient_last_name + " " + patient.patient_first_name + " " + patient.care_certified.name, patient_path(patient.id) %>
          <%= image_tag "account_icon.svg" %>
        </div>
      <% end %>
    </ul>
  </div>
</div>

<%= render "shared/second-footer"%>
